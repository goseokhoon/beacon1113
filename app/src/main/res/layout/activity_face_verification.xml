<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="16dp">

    <!-- 왼쪽 반쪽: 저장된 얼굴 사진과 실시간 얼굴 사진 -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/storedFaceImageView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#E0E0E0"
            android:scaleType="fitCenter"
            android:layout_marginBottom="8dp" />

        <ImageView
            android:id="@+id/liveFaceImageView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#E0E0E0"
            android:scaleType="fitCenter" />
    </LinearLayout>

    <!-- 오른쪽 반쪽: 카메라 프리뷰 및 버튼 -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- 카메라 프리뷰 -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_marginBottom="8dp">

            <androidx.camera.view.PreviewView
                android:id="@+id/previewView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#E0E0E0" />

            <com.example.myapplication2222.FaceOverlay
                android:id="@+id/faceOverlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>

        <!-- 얼굴 인증 제목과 일치율 텍스트 -->
        <TextView
            android:id="@+id/faceVerificationTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="얼굴 인증"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/similarityTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="일치율: "
            android:textSize="16sp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp" />

        <!-- 진행 상태 표시 -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="invisible"
            android:layout_marginTop="8dp" />

        <!-- 얼굴 촬영 및 인증 버튼 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/verifyFaceButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="얼굴 인증"
                android:layout_marginStart="4dp"
                android:backgroundTint="#2196F3"/> <!-- 파란색 설정 -->

        </LinearLayout>

        <!-- 카메라 전환 버튼 -->
        <Button
            android:id="@+id/switchCameraButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="카메라 전환"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:backgroundTint="#2196F3" />  <!-- 파란색 설정 -->
    </LinearLayout>

</LinearLayout>
